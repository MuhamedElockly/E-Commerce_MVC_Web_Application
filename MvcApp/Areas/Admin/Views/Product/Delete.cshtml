@model Product




<div class="card shadow border-0 my-4 ">

	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2"> Create new product</h2>

			</div>

		</div>


	</div>
	<div class="card-body p-4">

		<form method="post">
			<div class="border p-3 mt-4">
				<input asp-for="Id" hidden />
				<div class="row pb-2">
					<h2> Delete</h2>

				</div>
				<div asp-validation-summary="All"></div>
				<div class="form-floating py-2 col-12">

					<input asp-for="Title" disabled type="text" class="form-control border-0 shadow" />
					<label asp-for="Title"  class="ms-2"></label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">

					<input asp-for=Description disabled type="text" class="form-control border-0 shadow" />
					<label asp-for=Description class="ms-2"></label>
					
				</div>
				<div class="form-floating py-2 col-12">

					<input asp-for="Author" disabled type="text" class="form-control border-0 shadow" />
					<label asp-for="Author" class="ms-2"></label>
				
				</div>
				<div class="form-floating py-2 col-12">

					<input asp-for="ISBN" disabled type="text" class="form-control border-0 shadow" />
					<label asp-for="ISBN" class="ms-2"></label>
					
				</div>
				<div class="form-floating py-2 col-12">

					<input asp-for="ListPrice" type="text" disabled class="form-control border-0 shadow" />
					<label asp-for="ListPrice" class="ms-2"></label>
					
				</div>
				<div class="form-floating py-2 col-12">

					<input asp-for="Price" disabled type="text" class="form-control border-0 shadow" />
					<label asp-for="Price" class="ms-2"></label>
					
				</div>
				<div class="form-floating py-2 col-12">

					<input asp-for="Price50" disabled type="text" class="form-control border-0 shadow" />
					<label asp-for="Price50" class="ms-2"></label>
				
				</div>
				<div class="form-floating py-2 col-12">

					<input asp-for="Price100" disabled type="text" class="form-control border-0 shadow" />
					<label asp-for="Price100" class="ms-2"></label>
					
				</div>
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a class="btn btn-outline-secondary form-control" asp-controller="product" asp-action="Index">Back</a>
					</div>
				</div>
			</div>


		</form>

	</div>

