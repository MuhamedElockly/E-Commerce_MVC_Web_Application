@model List<Product>





<div class="card shadow border-0 my -4 ">

	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2"> Create new Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pt-4 pb-3">
			<div class="col-6">
				<h1>Product View</h1>
			</div>
			<div class="col-6 text-end">
				<a asp-action="Upsert" asp-controller="Product" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i>
					Add new product
				</a>
			</div>

		</div>


		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Product Title
					</th>
					
					<th>
						Product ISBN
					</th>
					<th>
						Product Author
					</th>
					
					<th>
						Product Price
					</th>
					

				</tr>
			</thead>
			<tbody>

				@foreach (var prod in Model)
				{
					<tr>
						<td> @prod.Title</td>
						
					
						<td> @prod.ISBN</td>
						<td> @prod.Author</td>
						
						<td> @prod.Price</td>
						
						<td>
							<div class="w-75 btn-group text-end" role="group">
								<a asp-controller="Product" asp-action="Upsert" asp-route-id="@prod.Id" class="btn-primary btn mx-2">

									<i class="bi bi-pencil-square "></i> Edit
								</a>
								<a asp-controller="Product" asp-action="Delete" asp-route-id="@prod.Id" class="btn-danger btn mx-2">

									<i class="bi bi-trash-fill "></i> Delete
								</a>


							</div>
						</td>
					</tr>
				}

			</tbody>
		</table>
	</div>
