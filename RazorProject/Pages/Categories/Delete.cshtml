@page
@model RazorProject.Pages.Categories.DeleteModel


<form method="post">
	<div class="border p-3 mt-4">
		<input asp-for="Category.Id" hidden/>
		<div class="row pb-2">
			<h2 > Delete</h2>


		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Category.Name" class="p-0">

			</label>
			<input asp-for="Category.Name" type="text" disabled class="form-control" />
		
		</div>
		<div class="mb-3">
			<label asp-for="Category.DisplayOrder" class="p-0">

			</label>
			<input asp-for="Category.DisplayOrder" type="text" disabled class="form-control" />
			
		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6">
				<a class="btn btn-outline-secondary form-control" asp-page="/Categories/Index">Back</a>
			</div>
		</div>
	</div>


</form>
